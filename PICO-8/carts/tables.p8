__lua__

#include colors.lua


function draw_invader(inv)
	spr(inv.s,inv.x,inv.y)
end

function update_invader(inv)
	inv.x += direction * hstep
	
	if (inv.x < 8) then
		direction *=-1
		inv.y += vstep
	end
	
	if (inv.x > 120) then
		direction *=-1
		inv.y += vstep
	end
end

function _init()
	direction = -1
	hstep = 4
	vstep = 16
	i = {x=120,y=0,s=1,draw=draw_invader,update=update_invader}
end

function _update()
	i:update()
end

function _draw()
	cls()
	i:draw()
end

