pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

#include colors.lua

function _init()
	counter = 0
	cls(0)
end

function _update()
	counter += 1
	if counter == 100 then
	cls(0)
	counter = 0
	end
end

function nextrand(lo,hi)
	range = hi-lo
	r = flr(rnd(range))
	r = r + lo
	return r
end

function _draw()
	x0 = nextrand(0,127)
	y0 = nextrand(0,127)
	x1 = nextrand(0,127)
	y1 = nextrand(0,127)
	c = nextrand(1,16)
	line(x0,y0,x1,y1,c)
end

