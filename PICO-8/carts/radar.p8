__lua__

#include colors.lua

function _init()
	cls(0)
	angle = 0
	x = 0
	y = 0
end

function _update60()
	x = cos(angle/360)
	y = sin(angle/360)
	x = x * 60
	y = y * 60
	angle += 1
	if angle == 360 then angle = 0 end
end

function _draw()
	cls(0)
	circ(63,63,60)
	line(63,63,63+x,63-y)
end

