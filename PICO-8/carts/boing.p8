pico-8 cartridge // http://www.pico-8.com
version 29
__lua__
#include alarms.lua
#include colors.lua

function _init()
	cls(0)
	x=0
	y=0
	angle=0
end

function _update()
	angle=x/128
	angle*=360
	angle*=4
	x+=1
	if x==128 then x=0 cls() end
	
	y=sin(angle/360)
	y=abs(y)
	y*=32
end

function _draw()
	line(0,100,127,100,yellow)
	circfill(x,100-y,1,yellow)
end

