pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

#include colors.lua

x0 = 0
y0 = 0
x1 = 127
y1 = 127
c = 0

function _init()
	cls(0)
end

function _update()
	--change color and sizing of rectangles
	x0 += 1
	y0 += 1
	x1 -= 1
	y1 -= 1
	c += 1
	
	if x0 >= x1 then
	--reset rectangle positioning
	x0 = 0
	y0 = 0
	x1 = 127
	y1 = 127
	end
end

function _draw()
	rectfill(x0,y0,x1,y1,c)
end

