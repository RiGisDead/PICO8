pico-8 cartridge // http://www.pico-8.com
version 29
__lua__
#include alarms.lua
#include colors.lua

function _init()
	alarm0 = make_alarm(10,shift)
	letters={}
	add(letters,"a")
	add(letters,"k")
	add(letters,"t")
	add(letters,"h")
	add(letters,"e")
	add(letters,"m")
	
	 
end

function _update()
	update_alarms()
end

function _draw()
	cls()
	x=0
	for l in all (letters) do
		print(l,x,0)
		x+=6
	end
end

function shift()
	temp = letters[1]
	del(letters,temp)
	add(letters,temp)
	start_alarm(alarm0,10)
end


