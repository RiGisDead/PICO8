pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

#include colors.lua

function _init()
	cls(0)
	angle = 0
end

function _update60()
	s = sin(angle/360)
	s *= 16
	s += 16
	angle += 1
	if angle == 360 then angle = 0 end
end

function _draw()
	line = ""
	for i=1,s do --loop to add the letter "x" s times to a single line then print continously
		line=line.."x"
	end
	print(line)
end

