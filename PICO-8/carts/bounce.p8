pico-8 cartridge // http://www.pico-8.com
version 29
__lua__
#include colors.lua

px=63
py=63
hspeed=1
vspeed=1

function _init()
	cls(0)
end

function _update()
	px += hspeed
	py += vspeed
	if px == 0 or px == 119 then hspeed *= -1 end
	if py == 0 or py == 119 then vspeed *= -1 end
end

function _draw()
	cls(12)
	spr(1,px,py)
end

