pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

#include colors.lua

function _init()
	cls(0)
	frog={x=0,y=60,alarm0=30,alarm0event=frog_alarm0}
end

function _update()
	update_frog(frog)
end

function _draw()
	cls()
	draw_frog(frog)
end

function update_frog(frog)
	frog.alarm0 -= 1 --countdown
	
	if (frog.alarm0 == 0) then
		--alarm going off
		frog:alarm0event()
	end
end

function draw_frog(frog)
	spr(1,frog.x,frog.y)
end

function frog_alarm0(frog)
	frog.x += 8
	frog.alarm0 = 30
end


